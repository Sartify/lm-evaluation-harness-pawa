{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Run lm_eval evaluation",
      "type": "shell",
      "command": "python",
      "args": [
        "-m",
        "accelerate.commands.launch",
        "-m",
        "lm_eval",
        "--model",
        "hf",
        "--model_args",
        "pretrained=google/gemma-3-4b-it",
        "--tasks",
        "en_congo_sw_translate",
        "--batch_size",
        "8",
        "--apply_chat_template",
        "true",
        "--output_path",
        "outputs/flan-t5-small-wmt-ro-en.json",
        "--limit",
        "10"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "env": {
        "CUDA_VISIBLE_DEVICES": "0,1",
        "TRANSFORMERS_VERBOSITY": "error"
      }
    }
  ]
}
