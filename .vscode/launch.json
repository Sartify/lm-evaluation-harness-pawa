{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python: launch lm_eval",
      "type": "python",
      "request": "launch",
      "module": "lm_eval",
      "args": [
        "--model",
        "hf",
        "--model_args",
        "pretrained=google/gemma-3-1b-it,device_map=auto",
        "--tasks",
        "en_sw_translate_mich",
        "--batch_size",
        "4",
        "--apply_chat_template",
        "true",
        "--output_path",
        "outputs/flan-t5-small-wmt-ro-en.json",
        "--limit",
        "10"
      ],
      "cwd": "${workspaceFolder}",
      "env": {
        "CUDA_VISIBLE_DEVICES": "0",
        "TRANSFORMERS_VERBOSITY": "error"
      },
      "justMyCode": true,
      "console": "integratedTerminal"
    }
  ]
}
